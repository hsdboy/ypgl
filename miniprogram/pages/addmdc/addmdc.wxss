::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.box {
  height: 88vh;
  background: #eee;
  overflow: auto;
}

.button {
  height: 12vh;
  background: #eee;
}

.box>view {
  margin: 10rpx 0 50rpx;
}

.box>view>view {
  display: flex;
  background: white;
  padding: 10rpx 0;
  font-size: 35rpx;
}

.box>view>view>input {
  padding-left: 20rpx;
}

.right {
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  background: #55e;
  border-radius: 0;
  color: white;
  font-size: 35rpx;
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
  margin: auto;
}
