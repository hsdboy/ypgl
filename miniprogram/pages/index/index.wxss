@import "../../style/iconfont.wxss";
.body{
  width: 100vw;
  height: 100vh;
  background: #f9f9f9
}
.head{
  width: 100%;
  height: 300rpx;
  background: #5555ee;
}
.head .text{
  font-size: 70rpx;
  color: white;
  text-align: center;
  padding: 70rpx;
}
.head .text>view{
  font-size: 30rpx;
}
.content{
  width: 90%;
  height: 600rpx;
  background: white;
  border-radius: 10rpx;
  margin: -50rpx auto 0 ;
  padding-top: 40rpx;
  box-shadow: -10rpx 10rpx 100rpx 1rpx  #666666;

  justify-content: space-around;
  flex-wrap: wrap;
}
.content navigator{
  width: 30%;
  height: 180rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
  float: left;
  margin: 10rpx
}
.content view image{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}
.section{
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  box-shadow: 2rpx 0 2rpx 2rpx #aaaaaa;
  padding-top:5rpx;
  padding-left:20rpx;
  display:flex;
  align-items: center;  
}
.section input{
  padding-left:20rpx;
  font-size:25rpx;
  border-radius:30rpx;  
  width: 70%;
  height: 60rpx;
  background: #eeeeee
}
.section button{
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius:40rpx;
  background: #33ee33;
  font-size: 35rpx;
  color:white; 
}
.bottom{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 150rpx;
  background: white;
  position: fixed;
  bottom:0;
  color:black;
  font-size: 30rpx;
}
.bottom navigator{
  display: block;
  width: 30%;
  height: 180rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
}
.bottom>view{
  width: 30%;
  height: 180rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
}
.bottom .left{
    color: blue;
}
